def test_no_error(test):
    test()
    ret = bess.check_constraints()
    assert(not ret)

    bess.reset_all()


def test_fatal_error(test):
    test()
    try:
        ret = bess.check_constraints()
        assert(False)  # Should never get here.
    except bess.ConstraintError as e:
        pass
    bess.reset_all()


